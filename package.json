{
  "name": "quill-and-creations",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/api/bin/www.js",
    "build:api": "cd api && tsc -p ./tsconfig.json",
    "dev:api": "nodemon --exec ts-node ./api/bin/www.ts",
    "dev:client": "cd client && vite --port 3000",
    "build:client": "cd client && tsc -p ./tsconfig.json && vite build",
    "preview:client": "cd client && vite preview",
    "dev:admin": "cd admin && vite --port 3001",
    "build:admin": "cd admin && tsc -p ./tsconfig.json && vite build",
    "preview:admin": "cd admin && vite preview",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "build:ui": "cd ui && tsc -p ./tsconfig.json",
    "build": "rm -rf ./dist && yarn run build:api && yarn run build:client && yarn run build:admin && yarn run build:ui"
  },
  "dependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitejs/plugin-react": "^4.6.0",
    "antd": "^5.26.6",
    "bcryptjs": "^3.0.2",
    "classnames": "^2.5.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^17.2.0",
    "express": "~4.16.1",
    "express-basic-auth": "^1.2.1",
    "helmet": "^8.1.0",
    "mongodb": "^6.17.0",
    "mongoose": "^8.16.3",
    "morgan": "~1.9.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.0",
    "sass": "^1.89.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-tsconfig-paths": "^5.1.4",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/dotenv": "^8.2.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "jiti": "^2.4.2",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.37.0"
  }
}
